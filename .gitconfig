[user]
	name = adgai19
	email = gaitondeaditya@gmail.com
[core]
	editor = nvim
	pager = diff-so-fancy | less --tabs=4 -RFX
[credential]
	helper = store
[merge]
	tool = vimdiff3
[mergetool]
	path = nvim
[diff]
	tool = vimdiff3
[difftool "vimdiff3"]
	path = nvim
[interactive]
	diffFilter = diff-so-fancy --patch
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[diff-so-fancy]
	markEmptyLines = false
	changeHunkIndicators = false
[init]
	defaultBranc = main
[pull]
	rebase = false
