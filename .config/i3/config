# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  font pango:Inconsolata 6
    output DP-4
    tray_output none
    status_command bumblebee-status  -m  disk load cpu memory battery date time pasink system  -p interval=1 time.format="%H:%M CW %V" date.format="%a, %b %d %Y" home.path=/home system.lock="i3lock && xset dpms 5" system.logout="i3 msg exit" -t nord-powerline

    colors {

      background $nord0
        statusline $nord8
        focused_workspace  $nord3  $nord8
        active_workspace   $nord3  $nord6
        inactive_workspace $nord8  $nord3
        urgent_workspace   $nord3 $nord15

    }
}
#top bar
bar {
  font pango:Inconsolata 6
    position top
    tray_output none
    workspace_buttons no
    status_command bumblebee-status  -m amixer brightness nic indicator -p interval=1 nic.left-click="nmcli device wifi rescan" -t nord-powerline
    colors {

      background $nord0
        statusline $nord8

        focused_workspace  $nord3  $nord8
        active_workspace   $nord3  $nord6
        inactive_workspace $nord8  $nord3
        urgent_workspace   $nord3 $nord15

    }}
#HDMI-1
