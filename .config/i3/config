    tray_output none
    status_command bumblebee-status  -m load cpu memory battery date time pasink system  -p interval=1 time.format="%H:%M CW %V" date.format="%a, %b %d %Y" home.path=/home system.lock="i3lock && xset dpms 5" system.logout="i3 msg exit" -t nord-powerline
    colors{ background $nord0
      statusline $nord8
        focused_workspace  $nord3  $nord8
        active_workspace   $nord3  $nord6
